{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "declaration": true,
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
      "crypto": [
        "node_modules/crypto-browserify"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
